<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Titulo:" FontSize="Medium" />
        <Label Text="{Binding Text}" FontSize="Small"/>
        <Label Text="Descripcion:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>
        <StackLayout Orientation="Horizontal">
            <Button Text="Eliminar" BackgroundColor="Red"  HorizontalOptions="FillAndExpand"></Button>
            <Button Text="Editar"  BackgroundColor="YellowGreen" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </StackLayout>
    
</ContentPage>